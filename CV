% Secciones con línea horizontal bajo el título
\titleformat{\section}
  {\large\bfseries\color{myblue}} % formato
  {}                              % etiqueta (vacío para \section*)
  {0em}                           % separación etiqueta-título
  {}                              % código antes del título
  [\vspace{0.25em}{\color{gray!55}\titlerule[0.8pt]}] % línea bajo el título

\titleformat{\subsection}
  {\normalsize\bfseries\color{myblue}}
  {}
  {0em}
  {}
  [\vspace{0.25em}{\color{gray!45}\titlerule[0.6pt]}]

